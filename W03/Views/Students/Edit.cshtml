@model Student
@{
    var student = Model;
}

<h4>Create new Student</h4>

<div class="row">
    <div class="col-md-3">
        <form asp-controller="Students" asp-action="Edit" method="post">
            
        <input type="hidden" name="Id" value="@student.Id"/>


            <div class="form-group">
                <label for="Name">Name</label>
                <input class="form-control form-control-sm" type="text" asp-for="Name" value="@student.Name"/>
            </div>

            <div class="form-group">
                <label for="Email">Email</label>
                <input class="form-control form-control-sm" type="text" asp-for="Email" value="@student.Email" />
            </div>

            <div class="form-group">
                <label for="Age">Age</label>
                <input class="form-control form-control-sm" type="number" asp-for="Age" value="@student.Age" />
            </div>

            <div style="color:red" asp-validation-summary="All"></div>
            <input class="btn btn-sm btn-success mt-1 float-end" type="submit" value="Update"/>

        </form>
    </div>
</div>