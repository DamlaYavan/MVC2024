@model Student
@{
    var student = Model;
}

<h4>Create new Student</h4>

<div class="row">
    <div class="col-md-3">
    <form asp-controller="Students" asp-action="Create" method="post">
        <div class="form-group">
            <label for="Name">Name</label>
            <input class="form-control form-control-sm" type="text" asp-for="Name"/>
        </div>

        <div class="form-group">
                <label for="Email">Email</label>
                <input class="form-control form-control-sm" type="text" asp-for="Email" />
        </div>
        
        <div class="form-group">
                <label for="Age">Age</label>
            <input class="form-control form-control-sm" type="number" asp-for="Age"/>
        </div>
        
        <div style="color:red" asp-validation-summary="All"></div>
        <input class="btn btn-sm btn-primary mt-1 float-end" type="submit" value="Save"/>
     
    </form>
    </div>
</div>